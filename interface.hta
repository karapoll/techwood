<!-- ||||||||||||||||||||||||||||||||||||||JAVASCRIPT|||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
<script type="text/javascript">
	//le code javascript se réfère à une structure html et une mise en page css
	
	//le javascript s'appliquera une fois la page html+css+img+.. entièrement chargée
	
	//A: calcul de la dimension de l'écran : petit, grand, horiz, vert..
	//alert(screen.width + ' : ' + screen.height); // dimension écran
	//alert($(window).innerWidth() + ' : ' +  $(window).innerHeight() );// dimension fenêtre intérieure
	//alert($(window).outerWidth(true) + ' : ' +  $(window).outerHeight(true) );// dimension fenêtre extérieure
	//alert($(window).width() + ' : ' +  $(window).height() );// dimension fenêtre

	//B: calcul pour redimensionnement de la div "masque" et le centrage vert de l'article "slider"
	var largeurDispoEcran = $(window).innerWidth;
	var hauteurDispoEcran = $(window).innerHeight;
	
	//var hauteurEntete = 80;
	//var hauteurPied = 30;

	var hauteurEntete = $('#entete').height();//ciblage css utilisé dans jQuery //80
	var hauteurPied = $('#pieddepage').height();//30
	
	//alert(hauteurEntete + ' : ' + hauteurPied);//alerte info taille hauteur tête et pied
	
	var masque = $('#masque');
	
	//B1: calcul au changement de la page
	//B2: calcul au changement de dimension de la page
	$(window).on('load resize',function(e){
		//code executable au chargement de la page
		
		//mise à jour de la hauteur du masque
		var hauteurDispoEcran = $(window).innerHeight();
		var hauteurMasque = hauteurDispoEcran - hauteurEntete - hauteurPied;
		masque.css('height',hauteurMasque);
		
		//centrage vertical du slider
		var hauteurSlider = $('#slider').height();
		var hauteurTop = (hauteurMasque - hauteurSlider) / 2;
		$('#slider').css('top',hauteurTop);//recalcule chaque fois sur css top; code javascript répond à des besoins scénaristiques	
	});
	
	//C:déplacement horizontal du slider
	var slider = $('#slider');
	var positionInitiale = slider.position().left;
	//alert(positionInitiale);
	
	var f_deplacementDroite = function(){
		//alert ('déplacement droit demandé');
		//quelle est la condition ????
		//si la position actuelle est différente et inférieure à la position initiale
		var positionActuelle = slider.position().left;
		
		if(positionActuelle < positionInitiale){
		slider.css({
			left: positionActuelle + 160
		});
		}
	}
	
	var f_deplacementGauche = function(){
		//alert ('déplacement gauche demandé');
		var positionActuelle = slider.position().left;
		//console.log(positionActuelle);
		var largeurMasque = $(window).innerWidth();//A: récup dès le début du code
		var largeurSlider = slider.width();//B
		
		var differenceMasqueSlider = largeurMasque - largeurSlider;//A - B
			
			//differenceMasqueSlider = differenceMasqueSlider - positionInitiale;//C - posInit//se renouvelle à chaque fois, s'auto-écrase
			differenceMasqueSlider -= positionInitiale;//C-posInit
			//console.log(differenceMasqueSlider);//valeur forcément négative
		
			//petite compensation complémentaire si nécessaire
			differenceMasqueSlider -= 0;
			
		if(positionActuelle > differenceMasqueSlider){
			slider.css({
			left: positionActuelle - 160
		});
		}
	}
	
	//C1:le clavier 108 touches
	//keydown, keyup, keypress
	$(window).on('keyup',function(e){
		if(e.keyCode === 37 || e.keyCode === 81){
			// || = alt+maj+l sur mac
			//alert('vous avez enfoncé la flèche gauche ou Q');
			//déplacement à droite du slider
			f_deplacementDroite();
		}
		if(e.keyCode === 39 || e.keyCode === 68){
			//alert('vous avez enfoncé la flèche droite ou D');
			//déplacement à gauche du slider
			f_deplacementGauche();
		}
	});
	
	//C2:la roulette de souris
	masque.on({
		'mousewheel':function(e,delta){
		//console.log(delta);
		if(delta > 0){
			f_deplacementGauche();
		}
		if(delta < 0){
			f_deplacementDroite();
		}
		}
	});
	
	//C3:le swipe (mvt horizontal) sur un écran tactile
	masque.swipe({
		swipeLeft:function(){
			f_deplacementGauche();
		},
		swipeRight:function(){
			f_deplacementDroite();
		}
	});

</script>
